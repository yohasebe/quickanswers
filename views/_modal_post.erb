<div class="modal fade" data-keyboard="false" data-backdrop="static" id="modal_post" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 id="modal_header_post"><span class='text-primary'></span></h4>
      </div>
      <form id="form_post" role="form" action='/post' method='POST'>
        <div class="modal-body">
          <div id="parent_data_post"></div>
          <input name='post_id' type='hidden' id='post_id_post'>
          <input name='parent_id' type='hidden' id='parent_id_post'>
          <div class="form-group" id="thread_title">
            <label class="control-label txt_title"></label>
            <input type="text" class="form-control" name="title", id="title_post">
          </div>
          <div class="form-group">
            <label class="control-label txt_body"></label>
            <textarea class="form-control" name="body" rows="5" style="font-size:1em;" id="body_post"></textarea>
          </div>
          <div class="form-group">
            <label class="control-label txt_author"></label>
            <input type="text" class="form-control" name="author" id="author_post">
          </div>
          <div class="form-group">
            <label class="control-label txt_mail"></label>
            <input type="email" class="form-control" name="mail" id ="mail_post">
          </div>
          <div class="form-group">
            <label class="control-label txt_edit_pass"></label>
            <input type="text" class="form-control" name="del_pass" id="del_pass_post">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default txt_cancel" data-dismiss="modal"></button>
          <button type="button" class="btn btn-primary txt_submit" id="submit_delete"></button>
        </div>
      </form>
    </div>
  </div>
</div>